{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": ".",
    "module": "esnext", //"commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "composite": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    //"strict": true,
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "types": ["vite-plugin-svg-icons/client", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@pages/*": ["./src/pages/*"],
      "@proto/*": ["./src/proto/*"],
      "@addon/*": ["../add-on/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/main.ts",
    "src/utils/request.js",

    "src/router/*",
    "src/router/**/*",

    //"../add-on/ee/web/**/*",
    //"../add-on/saas/web/**/*",
    "../add-on/**/web/**/*",
  ],
  "exclude": ["node_modules", "dist", "public"]
}
